pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/seu-usuario/seu-repo-web.git'
            }
        }

        stage('Instalar dependÃªncias') {
            steps {
                sh 'npm install'
            }
        }

        stage('Executar testes Web') {
            steps {
                sh 'npx cypress run'
            }
        }

        stage('Publicar resultados') {
            steps {
                junit 'cypress/results/*.xml'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'cypress/results/**/*', allowEmptyArchive: true
        }
    }
}
